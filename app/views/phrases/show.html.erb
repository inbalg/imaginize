<div id="main">

    <%= image_tag("logo.svg", class: "logo") %>
    <h2>Guess the <%= image_tag(@phrase.category.singularize + ".svg")  %></h2>
    <div class="success">
      <%= image_tag(@success[rand(@success.size)]) %>
    </div>
    <div class="fail">
      <%= image_tag(@fail[rand(@fail.size)]) %>
    </div>
    <div class="images">
      <% @images.each do |image| %>
        <%= image_tag(image, class: 'word') %>
      <% end %>
      <br><br><br><%= label_tag "phrase_text", @phrase.text, class: "phrase_text" %>
    </div>


    <div id='take-a-guess'>
      <div id='before-guess'>
        <%= image_tag("arrow.svg", class: "arrow") %>
        <p class="guess">Press to answer</p>
        <%= image_tag("arrow.svg", class: "arrow") %>
      </div>

      <div id='while-guess'>
        <div id='guess'>
          <%= image_tag("micro.svg", class: "micro") %>
          <div id='guess-placeholder'></div>
        </div>
      </div>
    </div>

    <div>
      <%= hidden_field_tag "phrase_id", @phrase.id %>


      <div id='record-indication'>

      </div>

      <%= button_tag "Guess!", onclick: "startGuessing()" %>
    </div>
</div>
